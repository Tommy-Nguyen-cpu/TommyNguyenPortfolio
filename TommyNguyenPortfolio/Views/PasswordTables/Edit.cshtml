@model TommyNguyenPortfolio.Models.PasswordTable

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:white; text-shadow:1px 1px 2px black">Edit</h1>

<h4 style="color:white; text-shadow:1px 1px 2px black">Account Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PasswordTableId" />
            <div class="form-group">
                @Html.LabelFor(model => Model.Username, new { @class = "required", @style = "color:white; text-shadow:1px 1px 2px black" })
                @Html.EditorFor(model => Model.Username, new { htmlAttributes = new { @class = "form-control", @required = "", @disabled = "disabled" } })
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.Email, new { @class = "required", @style = "color:white; text-shadow:1px 1px 2px black" })
                @Html.EditorFor(model => Model.Email, new { htmlAttributes = new { @class = "form-control", @required = "", @disabled = "disabled" } })
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.Password, new { @class = "required", @style = "color:white; text-shadow:1px 1px 2px black" })
                @Html.PasswordFor(model => Model.Password, new { @class = "form-control", @required = "" })
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
